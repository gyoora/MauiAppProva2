<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProva2.Views.LoginApp"
             Title="LoginApp"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F0F2F5">

    <ScrollView>
        <VerticalStackLayout Spacing="25" 
                             Padding="30" 
                             VerticalOptions="Center">

            <VerticalStackLayout Spacing="5">
                <Label Text="Bem-vindo(a)!"
                       FontSize="32"
                       TextColor="#1c1c1c"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="Faça login para continuar"
                       FontSize="16"
                       TextColor="#9da3b4"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Image Source="totoro_welcome.png" 
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" 
                   Margin="0,20,0,20"/>

            <VerticalStackLayout Spacing="15">

                <Frame CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#e1e1e1" BackgroundColor="White">
                    <Entry x:Name="txtEmailLogin"
                           Placeholder="Seu e-mail"
                           Keyboard="Email"
                           HeightRequest="50"
                           Margin="15,0"
                           TextColor="#333"
                           PlaceholderColor="#aaa" />
                </Frame>

                <Frame CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#e1e1e1" BackgroundColor="White">
                    <Entry x:Name="txtSenhaLogin"
                           Placeholder="Sua senha"
                           IsPassword="True"
                           HeightRequest="50"
                           Margin="15,0"
                           TextColor="#333"
                           PlaceholderColor="#aaa" />
                </Frame>
            </VerticalStackLayout>

            <Button Text="ENTRAR"
                    Clicked="OnEntrarClicked"
                    BackgroundColor="#6200EE"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="55"
                    FontAttributes="Bold"
                    FontSize="16"
                    Margin="0,20,0,0">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,5" Opacity="0.2" Radius="5"/>
                </Button.Shadow>
            </Button>


            <Button Text="Ainda não tem conta? Cadastre-se"
                BackgroundColor="Transparent"
                TextColor="#6200EE"
                FontSize="14"
                Margin="0,10,0,0"
                Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>